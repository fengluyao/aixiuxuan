page{
  width: 750rpx;
  background: #fff;
}
.top{
  width: 100%;
  height: 90rpx;
  background: #eee;
}
.back{
  width: 100rpx;
  height: 100%;
  line-height: 95rpx;
  text-align: center;
  float: left;
}
.searchbox{
  width: 650rpx;
  height: 100%;
  float: right;
}
.search{
  width: 95%;
  height: 60rpx;
  background: #fff;
  margin-top: 15rpx;
  color: #aaa;
  font-size: 14px;
  text-align: center;
  border-radius: 20rpx;
}
.select{
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #ddd;
  border-top: 1px solid #ddd;
}
.tab{
  width: 25%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 14px;
}
.tab text{
  width: 100rpx;
  height: 60rpx;
  display: inline-block;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.tab image{
  position: relative;
  left: -20rpx;
  top: -5rpx;
}
.zonghe{
  width: 100%;
  height: 1000rpx;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
}
.block{
  width: 100%;
  height: 100rpx;
  background: #fff;
  border-top: 1px solid #ccc;
  font-size: 14px;
  line-height: 100rpx;
  color: #666;
}
.block text{
  margin-left: 50rpx;
}
.block image{
  float: right;
  margin-right: 50rpx;
  margin-top: 30rpx;
  opacity: 0;
}
.block:first-child{
  border:0;
}
.close{
  display: none;
}
.block image.show{
  float: right;
  margin-right: 50rpx;
  margin-top: 30rpx;
  opacity: 1
}
.on{
  color: #CF81F0;
}
.main{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20rpx 20rpx 0 10rpx;
  width: 98%;
  margin: 0 auto;
}
.list-item{
  width: 340rpx;
  margin: 20rpx auto 20rpx auto;
  border: 1px solid #CF81F0;
  padding-bottom: 10rpx;
  border-radius: 10rpx;
  background: #fff;
  text-align: center;
  padding-left: 10rpx;
}
.text{
  text-align: left;
  font-size: 16px;
} 
.name{
  margin: 3rpx 0 3rpx 0;
}
.subtitle{
  font-size: 10px;
  color: #aaa;
}
.price{
  font-size: 22px;
  color: #fe2000;
  margin: 10rpx 0 10rpx 0;
}
.price text{
  font-size: 14px;
}
.bottom{
  height: 60rpx;
  font-size: 12px;
  color: #999;
  text-align: left;
  line-height: 60rpx;
}
.bottom image{
  margin: 10rpx 10rpx 0 0;
}

.shaixuan{
  width: 100%;
  height: 85vh;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
}
.blc{
  width: 650rpx;
  height: 100%;
  background: #fff;
  float: right;
  position: relative;
}
.blcbox{
  width: 100%;
  height: 1200rpx;
  display: flex;
  flex-direction: column;
}
.box{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.title{
  font-size: 16px;
  margin-bottom: 20rpx;
  padding: 10rpx 0 0 15rpx;
}
.listbox{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-left: 15rpx;
}
.btn-list{
  width: 28%;
  height: 60rpx;
  padding: 5rpx;
  background: #f5f5f5;
  text-align: center;
  line-height: 60rpx;
  font-size: 12px;
  border-radius: 15rpx;
  margin: 0 20rpx 20rpx 0;
}
.btn-list:first-child{
  margin-left: 0;
}
.btnbox{
  width: 650rpx;
  height: 10vh;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
}
.btn{
  width: 50%;
  height: 10vh;
  background: #f5f5f5;
  border: 1px solid #eee;
  text-align: center;
  line-height: 10vh;
}
.qr{
  background: #FE404C;
}