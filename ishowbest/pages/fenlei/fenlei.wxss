page,.main{
  height: 100vh;
}
.main{
  display: flex;
  flex-direction: row;
  width:100%;
  height: 100%;
}
/* 左半部样式 */
.left{
  display: flex;
  flex-direction: column;
  width:200rpx;
  height: 100%;
  border-right: 1px solid #ccc;
}
.nav_list{
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 15px;
  border-top: 1px solid #dcdcdc;
  text-align: center;
}
.nav_list:first-child{
  border-top: 0;
}
.nav_name{
  display: inline-block;
  color: #333;
}
.nav_name.on{
  color: #CF7FF0;
}
.kuai{
  width: 12rpx;
  height: 24rpx;
  background: #CF7FF0;
  float: left;
  position: relative;
  top: 50%;
  margin-top: -12rpx;
}
/* 右边半部分 */
.right{
  display: flex;
  flex-direction: column;
}
.content{
  width: 500rpx;
  height: 100%;
  padding-left: 25rpx;
}
.content image{
  margin-top: 20rpx;
}
.content1{
  width: 500rpx;
  height: 800rpx;
  padding-left: 25rpx;
  display: flex;
  flex-wrap: wrap;
}
.box{
  width: 33%;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 14px;
}
.box image{
  margin: 10rpx auto;
}
.box text{
  font-size: 14px;
}
.content2{
  width: 500rpx;
  height: 500rpx;
  padding-left: 25rpx;
  display: flex;
  flex-wrap: wrap;
}