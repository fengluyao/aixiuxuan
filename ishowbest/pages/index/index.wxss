page{
  width: 750rpx;
  background: #f2f2f2;
  position: relative;
}
scroll-view{
  width: 100%;
  height: 100%;
}
/* 背景图 */
.bg{
  width: 100%;
  height: 400rpx;
}
/* 搜索框样式 */
.searchbox{
  box-sizing: border-box;
  width: 90%;
  height: 56rpx;
  background:#fff;
  margin: 0 auto;
  border-radius: 10rpx;
}
.search{
  width: 450rpx;
  height: 50rpx;
  border-radius: 10rpx;
  margin-left: 80rpx;
  font-size: 14px;
  padding-left: 30rpx;
  color:#bbb;
  text-align: center;
}
.searchicon{
  width: 70rpx;
  position: relative;
  top: -55rpx;
  left: 190rpx;
}
/* 轮播图样式 */
.swiper{
  width: 100%;
  height: 345rpx;
  text-align: center;
  position: absolute;
  top: 50rpx;
}
swiper{
  width: 100%;
  height: 100%;
}
/* 菜单栏样式 */
.navBar{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 90%;
  height: 160rpx;
  background: #fff;
  margin:80rpx auto 0 auto;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.nav-list{
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  margin: 0 36rpx;
}
.nav-item .item-img{
  display: inline-block;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 15rpx;
}
.nav-item .item-text{
  font-size: 12px;
  color: #999;
}
.new{
  width: 100%;
  text-align: center;
}
.fulibox{
  display: flex;
  justify-content: row;
  padding-top: 10rpx;
}
.newband{
  text-align: center;
  padding-top: 10rpx;
}
.word{
  width: 90%;
  background: #fff;
  margin: auto;
  border-radius: 10rpx;
  padding:10rpx 15rpx 10rpx 15rpx;
}
.china{
  width: 93%;
  margin: auto;
}
.Ctitle{
  margin: 0 30%;
  position: relative;
}
.details{
  display: flex;
  justify-content: row;
  padding: 0 5%;
  margin-top: -8rpx;
}
.first{
  width: 48%;
  height: 500rpx;
}
.sec{
  width: 48%;
  height: 500rpx;
  border-radius: 10rpx;
  margin-left: 4%;
}

.qdbox{
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  top: 0;
  z-index: 1000;
}
.qdok{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  z-index: -1000;
}
.qiandao{
  position: fixed;
  top: 170rpx;
  left: 70rpx;
}